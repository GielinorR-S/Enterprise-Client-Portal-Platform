{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=HelixPortalDb_Dev;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Jwt": {
    "Key": "THIS_IS_A_DEVELOPMENT_KEY_CHANGE_LATER",
    "Issuer": "HelixPortal",
    "Audience": "HelixPortalUsers"
  },
  "Cors": {
    "AllowedOrigins": "http://localhost:5000,https://localhost:5001"
  },
  "Azure": {
    "Storage": {
      "ConnectionString": ""
    },
    "ServiceBus": {
      "ConnectionString": "",
      "RequestCreatedTopic": "request-created",
      "DocumentUploadedTopic": "document-uploaded"
    },
    "KeyVault": {
      "Uri": ""
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/helixportal-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}

