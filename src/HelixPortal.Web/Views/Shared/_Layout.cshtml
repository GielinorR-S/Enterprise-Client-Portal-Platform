<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelixPortal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <!-- Sidebar -->
            <nav id="sidebar" class="sidebar">
                <div class="sidebar-header">
                    <h3><i class="bi bi-hexagon-fill"></i> HelixPortal</h3>
                </div>
                <ul class="list-unstyled components">
                    <li>
                        <a asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer2"></i> Dashboard</a>
                    </li>
                    <li>
                        <a asp-controller="Requests" asp-action="Index"><i class="bi bi-ticket-perforated"></i> Requests</a>
                    </li>
                    <li>
                        <a asp-controller="Documents" asp-action="Index"><i class="bi bi-file-earmark"></i> Documents</a>
                    </li>
                    <li>
                        <a asp-controller="Notifications" asp-action="Index"><i class="bi bi-bell"></i> Notifications</a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="Settings"><i class="bi bi-gear"></i> Settings</a>
                    </li>
                    @if (User.IsInRole("Staff") || User.IsInRole("Admin"))
                    {
                        <li class="mt-3">
                            <hr />
                            <small class="px-3 text-muted">Admin</small>
                        </li>
                        <li>
                            <a asp-controller="Clients" asp-action="Index"><i class="bi bi-building"></i> Clients</a>
                        </li>
                    }
                </ul>
            </nav>

            <!-- Page Content -->
            <div id="content" class="content">
                <!-- Top Navbar -->
                <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                    <div class="container-fluid">
                        <button type="button" id="sidebarCollapse" class="btn btn-sm btn-light">
                            <i class="bi bi-list"></i>
                        </button>
                        <div class="ms-auto d-flex align-items-center">
                            <div class="dropdown me-3">
                                <button class="btn btn-link position-relative" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-bell fs-5"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#">No notifications</a></li>
                                </ul>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-link dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    @(Context.Session.GetString("DisplayName") ?? "User")
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#">Profile</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>

                <!-- Main Content -->
                <main class="container-fluid p-4">
                    @RenderBody()
                </main>
            </div>
        }
        else
        {
            @RenderBody()
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

